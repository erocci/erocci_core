% -*- mode: erlang -*-
{src_dirs, 
 [
  "src",
  "src/backend",
  "src/model",
  "src/rendering"
 ]}.

{overrides, [
  {add, jiffy, [
    {plugins, [{pc, {git, "git@github.com:blt/port_compiler.git", {tag, "v1.0.0"}}}]},

    {provider_hooks, [
      {post, [{compile, {pc, compile}}, {clean, {pc, clean}}]}
     ]}
   ]}

 ]}.

{deps, 
 [
  {cowboy, ".*", {git, "git://github.com/extend/cowboy.git", {tag, "1.0.1"}}},
  {uuid, ".*", {git, "git://github.com/avtobiff/erlang-uuid.git", {tag, "v0.4.7"}}}, 
  {uri, ".*", {git, "git://github.com/heroku/uri.git", master}},
  {jiffy, ".*", {git, "git://github.com/davisp/jiffy.git", {tag, "0.14.3"}}},
  {erim_xml, ".*", {git, "git://github.com/lizenn/erim_xml.git", master}}
 ]}.
