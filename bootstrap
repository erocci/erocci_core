#!/usr/bin/make -f

all: Makefile
	@$(MAKE) --no-print-directory fetch
	@echo "###"
	@echo "### You can now run make or configure for customization"
	@echo "###"

Makefile: Makefile.in config.status

config.status: configure
	@./configure

configure: configure.ac
	@autoreconf -ivf

.PHONY: all

.SILENT:
